        <a href="https://www.google.com" style="color: #0a84ff; display: block; margin-top: 20px;">
            External Link (Will open Safari)
        </a>
    </div>

    <script>
        // Check if we are running in standalone mode
        if (window.navigator.standalone === true) {
            document.getElementById('mode-text').innerText = "✅ Running in Standalone Mode";
            document.getElementById('mode-text').style.backgroundColor = "#28a745";
        } else {
            document.getElementById('mode-text').innerText = "❌ Running in Safari Browser";
        }

        // The "Fix" to keep internal links from opening Safari
        document.addEventListener('click', function(e) {
            var target = e.target;
            while (target && target.tagName !== 'A') {
                target = target.parentNode;
            }
            if (target && target.getAttribute('href') && target.hostname === window.location.hostname) {
                e.preventDefault();
                window.location.href = target.getAttribute('href');
            }
        }, false);
    </script>
